@model IEnumerable<ViewAppointments_Result>
@{
	ViewBag.Title = "ShowAppointmentsList";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
	$(document).ready(function () {

		$('#showPopup').click(function () {
			$('#uploadForm').modal();
		});
	});
	function ShowErrorMessage(errorMessage) {
		$(".modal-body").html("Failed with error: <br/> " + errorMessage);
		$('#uploadForm').modal();
	} ‏
</script>
<h2>ShowAppointmentsList</h2>
<button id="showPopup" class="btn btn-main bold switch-direction">add</button>
<table class="table">
	<tr>
		<th>
			Name
		</th>
		<th>
			DateOfAppointment
		</th>
		<th>
			CreateDate
		</th>


	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td class="col">
				<div id="divFailedMonitoring">
					<button class="buttonFailed switch-direction" onclick="ShowErrorMessage(this.value)" value="@item.Name">gggg</button>

				</div>
			</td>
			<td class="col">
				@item.DateOfAppointment
			</td>
			<td class="col">
				@item.CreateDate‏

			</td>

		</tr>
	}

</table>




<div id="uploadForm" class="modal fade">
	<div class="modal-dialog ">
		<div class="modal-content">
			<div class="modal-header colorDivPopup">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body colorDivPopup">
				<div>
				
				</div>
			</div>
			<div class="modal-footer colorDivPopup">
				<button type="button" class="btn btn-default switch-direction" data-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>